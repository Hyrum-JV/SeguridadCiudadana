        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SeguridadCiudadana">

        <!-- SplashActivity como punto de entrada -->
        <activity
            android:name=".Login.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ============================================= -->
        <!--  AQUÍ ESTÁ LA LÍNEA QUE FALTA PARA EL ERROR    -->
        <!-- ============================================= -->
        <activity
            android:name=".Login.LoginActivity"
            android:exported="false" />
        <!-- ============================================= -->

        <activity
            android:name=".Registro.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".Contactos.EscanearQRActivity"
            android:exported="false" />
        <activity
            android:name=".Perfil.MostrarQRActivity"
            android:exported="false" />
        <activity
            android:name=".Pin.CreatePinActivity"
            android:exported="false" />
        <activity
            android:name=".Pin.UnlockPinActivity"
            android:exported="false" />
