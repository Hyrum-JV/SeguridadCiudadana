<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@android:color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="12dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="550dp"
        android:background="@android:color/white"
        android:scrollbars="vertical"
        android:fadeScrollbars="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@android:color/white">

            <!-- Header con categoría y estado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_dialog_categoria"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2"
                        android:layout_marginEnd="8dp"
                        tools:text="Robo a mano armada" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_dialog_estado"
                        style="@style/Widget.Material3.Chip.Assist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="32dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:chipStrokeWidth="0dp"
                        tools:text="Pendiente" />
                </LinearLayout>

            </LinearLayout>

            <!-- Evidencia -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_dialog_evidencia"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E0E0E0"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:id="@+id/iv_dialog_evidencia"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="Evidencia del reporte"
                    tools:src="@drawable/ic_image_placeholder" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Descripción -->
            <TextView
                android:id="@+id/tv_dialog_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#212121"
                android:lineSpacingExtra="6dp"
                android:layout_marginBottom="20dp"
                android:paddingVertical="4dp"
                tools:text="Se observó un individuo sospechoso merodeando por la zona..." />

            <!-- Separador -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="16dp" />

            <!-- Info: Fecha -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="10dp"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="#616161" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Fecha:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#616161" />

                <TextView
                    android:id="@+id/tv_dialog_fecha"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="#212121"
                    tools:text="03/12/2025 18:30" />
            </LinearLayout>

            <!-- Info: Ubicación -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="10dp"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_location"
                    app:tint="#616161" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Ubicación:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#616161" />

                <TextView
                    android:id="@+id/tv_dialog_ubicacion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="#212121"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="Av. España 1234" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.cardview.widget.CardView>