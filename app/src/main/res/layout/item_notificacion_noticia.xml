<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/blanco"
    app:strokeWidth="1dp">
    <!-- El fondo por defecto será blanco, lo que hace que la tarjeta resalte -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- 1. IMAGEN DE NOTICIA (Ahora a la derecha y más compacta) -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:contentDescription="Imagen de la noticia"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            tools:src="@drawable/campo_perfil_background"
            tools:visibility="visible"
            />

        <!-- 2. CONTENEDOR DE TEXTO (Ocupa el espacio restante a la izquierda) -->
        <LinearLayout
            android:id="@+id/textContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/imageView"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Título de la Noticia (Negrita y Color Destacado) -->
            <TextView
                android:id="@+id/tituloNoticia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/blanco"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Trujillo: Capturan a juez de paz que exigía coimas para resolver conflictos de tierras" />

            <!-- Descripción (Color más sutil, usando el nuevo gray_700) -->
            <TextView
                android:id="@+id/descripcionNoticia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:textColor="@color/gray_700"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="La Policía Nacional intervino al juez de paz mientras recibía 500 soles, dinero que solicitó para favorecer a uno de los implicados en una disputa." />

            <!-- Fuente y Fecha (Texto pequeño y color neutro) -->
            <TextView
                android:id="@+id/fuenteFechaNoticia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textSize="12sp"
                android:textColor="@color/gris"
                tools:text="Peru21 " />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
