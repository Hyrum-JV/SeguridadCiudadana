<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="?android:colorBackground"> <TextView
    android:id="@+id/tvTitulo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Nuevo reporte de incidente"
    android:textSize="20sp"
    android:textStyle="bold"
    android:textColor="?attr/colorOnBackground" app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvTipoReporte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Selecciona tipo de reporte"
        android:textColor="?attr/colorOnBackground" android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo" />

    <Spinner
        android:id="@+id/spinner_categoria"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTipoReporte" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_categoria_otro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Especifica la categoría"
        app:hintTextColor="?attr/colorOnBackground" android:visibility="gone"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/spinner_categoria"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    android:fillViewport="true"
    android:scrollbars="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:background="#212121">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nuevo reporte de incidente"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Categoría -->
        <TextView
            android:id="@+id/tvTipoReporte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Selecciona tipo de reporte"
            android:textColor="#FFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitulo" />

        <!-- Spinner -->
        <Spinner
            android:id="@+id/spinner_categoria"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTipoReporte" />

        <!-- Campo adicional si selecciona "Otro" -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_categoria_otro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnSurface" /> </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_ubicacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Ubicación actual: (cargando...)"
        android:textColor="?android:textColorSecondary" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_categoria_otro" />

    <Button
        android:id="@+id/btn_adjuntar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Subir evidencia"
        android:backgroundTint="?attr/colorSecondary" android:textColor="?attr/colorOnSecondary" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_ubicacion" />

    <ImageView
        android:id="@+id/img_preview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="92dp"
        android:background="?attr/colorSurface" android:scaleType="centerCrop"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/btn_adjuntar"
        app:layout_constraintTop_toTopOf="@id/btn_adjuntar" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/descripcionLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="¿Quieres agregar más detalles? (opcional)"
        android:layout_marginTop="70dp"
        app:hintTextColor="?attr/colorOnBackground" app:layout_constraintTop_toBottomOf="@id/btn_adjuntar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
            android:hint="Especifica la categoría"
            app:hintTextColor="@color/blanco"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/spinner_categoria"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_categoria_otro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/blanco" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Ubicación -->
        <TextView
            android:id="@+id/tv_ubicacion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Ubicación actual: (cargando...)"
            android:textColor="#757575"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_categoria_otro" />

        <!-- Adjuntar evidencia -->
        <Button
            android:id="@+id/btn_adjuntar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="#BDBDBD"
            android:text="Subir evidencia"
            android:textColor="#212121"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_ubicacion" />

        <!-- Preview de imagen -->
        <ImageView
            android:id="@+id/img_preview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="92dp"
            android:background="#BDBDBD"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/btn_adjuntar"
            app:layout_constraintTop_toTopOf="@id/btn_adjuntar"
            tools:src="@android:drawable/ic_launcher" />

        <!-- Descripción opcional -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/descripcionLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:maxLines="6"
            android:minLines="3"
            android:textColor="?attr/colorOnSurface" /> </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_enviar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Enviar reporte"
        android:backgroundTint="?attr/colorPrimary" android:textColor="?attr/colorOnPrimary" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/descripcionLayout" />
            android:hint="¿Quieres agregar más detalles? (opcional)"
            android:layout_marginTop="70dp"
            app:hintTextColor="@color/blanco"
            app:layout_constraintTop_toBottomOf="@id/btn_adjuntar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:maxLines="6"
                android:minLines="3"
                android:textColor="#FFFFFF" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Botón de envío -->
        <Button
            android:id="@+id/btn_enviar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:backgroundTint="#D32F2F"
            android:text="Enviar reporte"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/descripcionLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>