            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tu opiniÃ³n nos ayuda a mejorar"
                android:textSize="14sp"
                android:textColor="#757575"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Rating Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="20dp">

                <RatingBar
                    android:id="@+id/rating_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1"
                    android:rating="0"
                    android:progressTint="#FFD700"
                    android:progressBackgroundTint="#E0E0E0"
                    style="@style/Widget.AppCompat.RatingBar" />

                <TextView
                    android:id="@+id/tv_rating_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:text="Toca las estrellas"
                    tools:text="Excelente!" />

            </LinearLayout>

            <!-- CategorÃ­a de feedback -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Â¿QuÃ© aspecto deseas evaluar?"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#424242"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_categoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:singleSelection="true"
                app:selectionRequired="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_usabilidad"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ¯ Usabilidad"
                    android:checked="true" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_funcionalidad"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âš™ï¸ Funcionalidad" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_diseÃ±o"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ¨ DiseÃ±o" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_seguridad"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ›¡ï¸ Seguridad" />

            </com.google.android.material.chip.ChipGroup>

            <!-- Comentario -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CuÃ©ntanos mÃ¡s (opcional)"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#424242"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:counterEnabled="true"
                app:counterMaxLength="300">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_comentario"
                    android:layout_width="match_parent"
