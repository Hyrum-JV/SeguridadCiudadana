<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    android:background="@color/blanco"
    tools:context=".Login.UnlockPinActivity">

    <!-- Título -->
    <TextView
        android:id="@+id/tvUnlockTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresa tu PIN"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/negro"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/editPin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="32dp"/>

    <!-- Campo para PIN -->
    <EditText
        android:id="@+id/editPin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="••••"
        android:inputType="numberPassword"
        android:maxLength="4"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/tvUnlockTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp"/>

    <!-- Botón para ingresar -->
    <Button
        android:id="@+id/btnEntrar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Entrar"
        android:backgroundTint="#7d2181"
        android:textColor="@color/blanco"
        android:textAllCaps="false"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/editPin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
