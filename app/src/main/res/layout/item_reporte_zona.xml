<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- CategorÃ­a -->
    <TextView
        android:id="@+id/tv_categoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        tools:text="ðŸ’¡ REPORTE: Robo" />

    <!-- UbicaciÃ³n -->
    <TextView
        android:id="@+id/tv_ubicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_categoria"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurfaceVariant"
        tools:text="UbicaciÃ³n: Calle Principal" />

    <!-- DescripciÃ³n -->
    <TextView
        android:id="@+id/tv_descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_ubicacion"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurfaceVariant"
        tools:text="DESCRIPCIÃ“N: Detalles del incidente" />

    <!-- Hora del reporte -->
    <TextView
        android:id="@+id/tv_hora_reporte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_descripcion"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:textColor="?attr/colorOnSurfaceVariant"
        tools:text="Hace 2 horas" />

    <!-- Contenedor de imagen de evidencia -->
    <FrameLayout
        android:id="@+id/layout_imagen_contenedor"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/tv_hora_reporte"
        android:layout_marginTop="8dp"
        android:background="#E0E0E0"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/img_evidencia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_placeholder" />

    </FrameLayout>

</RelativeLayout>