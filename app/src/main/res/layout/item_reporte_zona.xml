<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Imagen de evidencia (izquierda) -->
        <FrameLayout
            android:id="@+id/layout_imagen_contenedor"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="#F0F0F0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_evidencia"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Evidencia"
                tools:src="@drawable/ic_image_placeholder" />
        </FrameLayout>

        <!-- Contenido principal -->
        <LinearLayout
            android:id="@+id/layout_contenido"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/layout_imagen_contenedor"
            app:layout_constraintEnd_toStartOf="@id/btn_ver_detalle"
            app:layout_constraintTop_toTopOf="parent">

            <!-- CategorÃ­a -->
            <TextView
                android:id="@+id/tv_categoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="?attr/colorPrimary"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="ðŸ’¡ REPORTE: Robo a mano armada" />

            <!-- UbicaciÃ³n -->
            <TextView
                android:id="@+id/tv_ubicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="13sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:maxLines="1"
                android:ellipsize="end"
                android:drawablePadding="4dp"
                app:drawableStartCompat="@drawable/ic_location"
                app:drawableTint="?attr/colorOnSurfaceVariant"
                tools:text="Amphitheatre Parkway #1600" />

            <!-- DescripciÃ³n (opcional) -->
            <TextView
                android:id="@+id/tv_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurface"
                android:maxLines="2"
                android:ellipsize="end"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="DESCRIPCIÃ“N: Individuo sospechoso..." />

            <!-- Hora -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="?attr/colorOnSurfaceVariant" />

                <TextView
                    android:id="@+id/tv_hora_reporte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textSize="11sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    tools:text="Hace 12 minutos" />

            </LinearLayout>

        </LinearLayout>

        <!-- BotÃ³n para ver detalles (derecha) -->
        <ImageView
            android:id="@+id/btn_ver_detalle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_forward"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Ver detalles"
            app:tint="?attr/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>